package capture;

struct acoustic_t {
  const int8_t PING=1, PONG=2, DATA=3, ACK=4;

  int64_t utime;

  int16_t src;
  int16_t dest;
  int8_t type;

  // For ACK packets.
  int8_t frame;

  // For DATA packets.
  boolean ack_requested;
  int8_t  nframes;
  int16_t framesize[nframes];
  int16_t maxframesize;
  byte data[nframes][maxframesize];
  // framevalid is used by simulator to mark lost frames
  boolean framevalid[nframes];
}

